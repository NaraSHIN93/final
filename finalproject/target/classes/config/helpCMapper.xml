<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="helpC">
	
	<select id="Hlist" resultType="dto.BoardDTO">
		select * from board
	</select>
	
	<select id="Hblog" parameterType="int" resultType="dto.BoardDTO">
		select * from board where b_num=#{b_num}
	</select>
	
	<select id="Hcomlist" parameterType="int" resultType="dto.ReplyDTO">
		select * from b_comment where board_b_num=#{board_b_num}
	</select>
	
	<insert id="Hcomins" parameterType="dto.ReplyDTO">
		insert into b_comment values(b_comment_cm_num_seq.nextval, #{cm_content}, #{board_b_num}, #{user_id}, sysdate)
	</insert>
</mapper>   











