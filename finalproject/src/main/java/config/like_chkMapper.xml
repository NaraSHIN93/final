<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
    <mapper namespace="like_chk" >
    
    <insert id="first_insert" parameterType="dto.BoardDTO">
       insert into like_chk values(#{b_num}, #{user_id},#{b_category_c_num})
    </insert>
    
    <select id="likeChk" resultType="dto.Like_chkDTO" parameterType="dto.BoardDTO">
        select * from like_chk where user_id=#{user_id} and board_b_num=#{b_num}
    </select>
      
    <delete id="chk_del" parameterType="dto.BoardDTO">
      delete from like_chk where user_id=#{user_id} and board_b_num=#{b_num}
    </delete>
    
    </mapper>